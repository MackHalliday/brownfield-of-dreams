<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>

  <% if current_user.github_token? %>
  <h3>Github</h3>
    <h4>Github Repositories</h4>
    <section class="github-repositories">
      <ul>
      <% @facades.repo_data.each do |repo| %>
        <li><%= link_to repo.name, repo.html_url %></li>
      <% end %>
    </ul>
    </section>
    <h4>Followers</h4>
    <section class="github-followers">
      <ul>
      <% @facades.follower_data.each do |follower| %>
        <li><%= link_to follower.login, follower.html_url %></li>
        <% if follower.is_user? %>
        <li><%= link_to Add Friend, friendship_path %></li>
        <% end %>
      <% end %>
    </ul>
    </section>
    <h4>Following</h4>
    <section class="github-following">
      <ul>
      <% @facades.following_data.each do |following| %>
        <li><%= link_to following.login, following.html_url %></li>
      <% end %>
    </ul>
    </section>
  <% else %>
    <section class="authorize-github">
      <%= button_to "Authorize GitHub", github_login_path %>
    </section>
  <% end %>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
</section>
