<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>

  <% if current_user.github_token? %>
  <h3>Github</h3>
    <h4>Github Repositories</h4>
    <section class="github-repositories">
      <ul>
      <% @github_facade.repo_data.each do |repo| %>
        <li><%= link_to repo.name, repo.html_url %></li>
      <% end %>
    </ul>
    </section>

    <h4> Following </h4>
    <section class="github-following">
      <ul>
      <% @github_facade.following_data.each do |following| %>
        <li><%= link_to following.login, following.html_url %></li>
      <% end %>
    </ul>
    </section>
    <% end %>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
</section>
